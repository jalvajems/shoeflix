<div class="colorlib-intro">
	<div class="container">
		<div class="row">
			<div class="col-sm-12 text-center">
				<h2 class="intro">Step into style with Shoeflix premium shoes, endless choices, and unmatched comfort for every walk!</h2>
			</div>
		</div>
	</div>
</div>
<div class="colorlib-product">
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-6 text-center">
				<div class="featured">
					<a href="/shop" class="featured-img" style="background-image: url(/images/featur-men.jpg);"></a>
					<div class="desc">
						<h2><a href="#">Shop Men's Collection</a></h2>
					</div>
				</div>
			</div>
			<div class="col-sm-6 text-center">
				<div class="featured">
					<a href="/shop" class="featured-img" style="background-image: url(/images/wmen-featur.jpg);"></a>
					<div class="desc">
						<h2><a href="#">Shop Women's Collection</a></h2>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="colorlib-product">
	<div class="container">
		<div class="row">
			<div class="col-sm-8 offset-sm-2 text-center colorlib-heading">
				<h2>Best Sellers</h2>
			</div>
		</div>
		<div class="row row-pb-md">
			<% if(products && products.length > 0) { %>
				<% products.forEach(function(product) { %>
					<div class="col-lg-3 mb-4 text-center">
						<div class="product-entry border">
							<a href="/productDetails/<%= product._id %>" class="prod-img">
								<img class="img-fluid" 
									src="/uploads/product-images/<%= product.productImage[0] %>"
									alt="<%= product.productName %>">
							</a>
							<div class="desc">
								<h2 class="product-name"><%= product.productName %></h2>
								<span class="price">â‚¹<%= product.salePrice %></span>
							</div>
						</div>
					</div>
				<% }); %>
			<% } else { %>
				<div class="col-12 text-center">
					<p>No products available at the moment.</p>
				</div>
			<% } %>
		</div>
	</div>
</div>


